  text-shadow: 0 0 5px #000;
}
h4, h5, h6, p {
  font-family: 'Open Sans', sans-serif;
  text-shadow: 0 0 5px #000;
}
body {
  overflow: hidden;
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  color: #333;
  background: body-color;
}
.App, #root {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
}
.cover-header {
  position:relative;
  height: auto;
  min-height: calc(100vh + 35px);
  padding: 0;
  margin: 0;
  overflow-x: hidden;
  width: 100%;
}
.wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.particule {
  position: absolute;
  font-size: 11px;
  color: white;
}
.burst-display {
  opacity: 0;
  animation-name: example;
  animation-duration: 9s;
}
.transition-display {
  height: 100%;
  top: 0px;
  opacity: 0;
  left: -10vw;
  position: fixed;
  min-height: 100vh;
  width: 150%;
  background: transparent;
  animation-name: example;
  animation-duration: 6s;
  z-index: 1;
  .tile {
    border:1px solid rgba(255,255,255,.255);
    height: 33%;
    width: 100%;
    left: 100%;
    top: -33%;
    position: absolute;
    transform: rotate(-20deg);
    background: black;
  }
  .tile-1 {
    z-index: 1;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 2s;
  }
  .tile-2 {
    z-index: 1;
    top: 0;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 1.5s;
  }
  .tile-3 {
    z-index: 2;
    top: 33%;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 1s;
  }
  .tile-4 {
    z-index: 3;
    top: 66%;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: .5s;
  }
  .tile-5 {
    z-index: 2;
    top: 99%;
    animation-name: example2;
    animation-duration: 5s;
  }
}

video { width: 50%; opacity: 0; display: none;}
.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}

.clearfix { display: inline-block; }

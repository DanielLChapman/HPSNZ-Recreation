.menu-mobile {
  position: fixed;
  background: transparent;
  top: 0;
  left: 0;
  overflow-y: scroll;
  z-index: 9;
  /* adapted from https://codepen.io/eduardoboucas/pen/BNyKwO */
  h6 {
    color: white !important;
    font-size: 8px;
    position: fixed;
    z-index: 12;
    margin: 0;
    padding: 0;
    right:50px;
    top: 90px;

    text-align: center;
    margin-top: -5px;
    transition: 1s;
    @media screen and (max-width: 1024px) {
      top: 76px;
      right: 35px;
    }
  }
  .menu-mobile-close-name {
    display: none;
  }
  .menu-mobile-checkbox {
    top: 65px;
    right: 45px;
    width: 30px;
    height: 30px;
    position: fixed;
  }
  .menu-mobile-checkbox-label {
    border: 0;
    top: 65px;
    right: 45px;
    width: 30px;
    height: 30px;
    cursor: pointer;
    display: inline-block;
    outline: 0;
    z-index: 12;
    -webkit-transition: 2s ease-in-out;
    transition: 2s ease-in-out;
    background: none;
    position: fixed;
    &:before, &:after {
      content: "";
      display: block;
      border-bottom: 2px solid white;
      width: 100%;
      margin-bottom: 8px;
      -webkit-transition: 1s ease-in-out;
      transition: 1s ease-in-out;
      transform: initial;
      -webkit-transform: initial;  
    }
    &::-moz-focus-inner {
      border: 0;
      padding: 0;
    }  
    @media screen and (max-width: 1024px) {
      top: 50px;
      right: 30px;
    }
  }
  .menu-mobile-checkbox {
    display: none;
  }
  .menu-mobile-checkbox:checked {
    & ~ .menu-mobile-close-name {
      display: block;
    }
    & ~ .menu-mobile-menu-name {
      display: none;
    }
  }

  .menu-mobile-checkbox:checked ~ .menu-mobile-checkbox-label {
    $mobilenavcolor: $yellow;
    border-bottom: 2px solid transparent;
    right: 44px;
    @media screen and (max-width: 1024px) {
      right: 29px;
    }

    -webkit-transition: 2s ease-in-out;
    transition: 2s ease-in-out;
    border-left: 2px solid transparent;
    &:before {
      transform: rotate(-405deg) translateY(1px) translateX(-3px);
      -webkit-transform: rotate(-405deg) translateY(1px) translateX(-3px);      
      border-bottom:2px solid $mobilenavcolor;
    }

    &:after {
      transform: rotate(405deg) translateY(-4px) translateX(-5px); 
      -webkit-transform: rotate(405deg) translateY(-4px) translateX(-5px);       
      border-bottom: 2px solid $mobilenavcolor;
    }
  }
  .mobile-menu-section {
    width: 100%;
    height: 100vh;
    overflow-y: auto;
    background-color: menu;
    z-index: 1;
    position: fixed;
    top: 0;
    display: block;
    left: 100%;
    transition: 1s;
    .side-nav {
      z-index: 11;
      transition: 2s;
    }
    span {
      font-size: 11px;
      position: fixed;
      top: 60px;
      left: 3vw;
      text-transform: uppercase;
      letter-spacing: .24em;
      display: none;
      z-index: 11;
      font-size: 11px;
      font-weight: 700;
      a, h3 {
        text-decoration: none; 
        color: light-font-color !important; 
      }
      @media screen and (max-width: 1024px) {
        left: 5vw;
      }
    }
    .overflow-container {
      position: absolute;
      width: 100%;
      z-index: 10;
      top: -200%;
      background: menu;
      overflow-y: auto;
      height: 100%;
      ul {
        width: 100%;
        height: 100%;
        min-height: 700px;
        position: relative;
        padding: 0;
        margin: 0;
        left: 0;
        z-index: 10;
        margin-top: 25vh;
        @media screen and (max-width: 644px) {
          margin-top: 15vh;
        }
        li {
          width: 100%;
          text-align: center;
          font-size: 2em;
          text-transform: uppercase;
          letter-spacing: .24em;
          border-bottom: 1px solid body-color;
          a {
            text-decoration: none;
            color: light-font-color;
          }
          &:hover a {
            color: orange;
            transition: .5s;
          }
          @media screen and (max-width: 646px) {
            font-size: 1.4em;
          }
        }
        &:nth-child(1) {
          border-top: 1px solid body-color;
        }
      }
    }
  }
  .menu-mobile-checkbox:checked ~ .mobile-menu-section {
    z-index: 10;
    span {
      display: block;
      @media screen and (max-width: 1024px) {
        top: 40px;
      }
    }
  }
  .menu-mobile-checkbox:checked ~ .mobile-menu-section {
    left: 0;
    background-color: body-color;
    .side-nav {
      background-color: body-color;
      @media screen and (max-width: 1024px) {
        background: transparent;
      }
    }
    .overflow-container {
      transition: 1s;
      top: 0;
      transition-delay: 1s;
    }
  }
}


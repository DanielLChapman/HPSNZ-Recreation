.title-bracket {
  width: 15px;
  position: relative;
  top: -165px;
  float: right;
  height: 90%;
  background: orange;
}
.title-bracket-right, .title-bracket-left {
  &:before, &:after {
    content: "";
    display: block;
    width: 20px;
    height: 15px;
    background: orange;
    left: -20px;
    position: relative;
  }
  &:after {
    top: calc(100% - 30px);
  }
}
.title-bracket-left {
  &:before, &:after {
    content: "";
    display: block;
    width: 20px;
    height: 15px;
    background: orange;
    left: 15px;
    position: relative;
  }
  &:after {
    top: calc(100% - 30px);
  }
}

.brick {
  position:relative;
  width: calc(100% - 6vw);
  margin: 0 auto;
  padding: 0;
  height: 35px;
  top: -35px;
  border-top: 1px solid white;
  border-top-radius: 15px;
  background: white;
}

.tag-main {
  width: 120px;
  height: 45px;
  background: linear-gradient(to right, orange 50%, transparent 50%);
  background-size: 200% 100%;
  background-position:right bottom;
  color: light-font-color;
  border: 1px solid light-font-color;
  font-family: Raleway;
  position: relative;
  float: right;
  margin-top: 20px;
  transition: 1s;
  z-index: 3;
  &:hover {
    background-position: left bottom;
    & ~ .tag-hidden {
      top: 20px;
      display: block;
      opacity: 1;
      left: 160px;
    }
    
  }
}
.tag-hidden {
  border:1px solid light-font-color;
  position: relative;
  top: 0px;
  z-index: 1;
  left: 120px;
  width: 120px;
  height: 45px;
  background: transparent;
  transition: 1s;
  opacity: 0;
}

.transition-display {
  height: 100%;
  top: 0px;
  opacity: 0;
  left: -10vw;
  position: fixed;
  min-height: 100vh;
  width: 150%;
  background: transparent;
  animation-name: example;
  animation-duration: 6s;
  z-index: 1;
  .tile {
    border:1px solid rgba(255,255,255,.255);
    height: 33%;
    width: 100%;
    left: 100%;
    top: -33%;
    position: absolute;
    transform: rotate(-20deg);
    background: black;
  }
  .tile-1 {
    z-index: 1;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 2s;
  }
  .tile-2 {
    z-index: 1;
    top: 0;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 1.5s;
  }
  .tile-3 {
    z-index: 2;
    top: 33%;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: 1s;
  }
  .tile-4 {
    z-index: 3;
    top: 66%;
    animation-name: example2;
    animation-duration: 5s;
    animation-delay: .5s;
  }
  .tile-5 {
    z-index: 2;
    top: 99%;
    animation-name: example2;
    animation-duration: 5s;
  }
}

video { width: 50%; opacity: 0; display: none;}
.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}

.clearfix { display: inline-block; }
.video-display > pre {
  height: 100vh;
  overflow-y: hidden;
  overflow-x: hidden;
  width: auto;
  min-width: 100%;
  font-size: 8px;
  letter-spacing: 3px;
  color: pixel-main;
  clear: left;
  position: absolute
  padding: 0;
  top: 0;
  background:transparent;
  left: 0%;
  z-index: 1;
  transition: 1s;
  margin: 0;
  @media screen and (max-width: 700px) {
    left: -50%;
  }
}
.medium {
  font-size: 6px !important;
  color: pixel-surround !important;
}
.small {
  font-size: 5px !important;
  color: pixel-surround !important;
}
.large {
